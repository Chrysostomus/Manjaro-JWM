conky.config = {
alignment = 'bottom_center',
background = true,
--border_margin = 5,
--border_width = 5,
border_inner_margin= 5,
default_color = '333333',
double_buffer = true,
draw_borders = false,
draw_outline = false,
draw_shades = false,
gap_x = 510,
gap_y = 350,
maximum_width = 500,
minimum_width = 245,
no_buffers = true,
override_utf8_locale = true,
own_window = true,
own_window_title = 'conky',
own_window_hints = 'undecorated,below,sticky,skip_taskbar,skip_pager',
own_window_transparent = true,
own_window_type = 'desktop',
text_buffer_size = 8000,
total_run_times = 0,
update_interval = 1,
uppercase = false,
use_xft = true,
xftalpha = 1
}
conky.text = [[
${font Roboto:pixelsize=35}${alignc}${time %d %b, %Y}${font}

${font Roboto:pixelsize=13}${alignc}${time %H:%M:%S I %a} I Frankfurt ${font Roboto:pixelsize=13}${alignc} ${weather http://weather.noaa.gov/pub/data/observations/metar/stations/ EDDF temperature temperature 15}°C

${font Roboto:pixelsize=13}${alignc} User: ${execi 5000 whoami} I Machine: $nodename I Uptime: $uptime
${font Roboto:pixelsize=13}${alignc} Distribution: ${execi 6000 awk -F'=' '/DESCRIPTION/ {print $2}' /etc/lsb-release |sed 's/"//g'} I Version: ${execi 6000 awk -F'=' '/DISTRIB_RELEASE=/ {printf $2" "} /CODENAME/ {print $2}' /etc/lsb-release}
${font Roboto:pixelsize=13}${alignc} Architecture: ${machine} I Kernel: ${kernel}
${font Roboto:pixelsize=13}${alignc} Root: ${fs_free /} / ${fs_used /} I Home: ${fs_free /home} / ${fs_used /home}
${font Roboto:pixelsize=13}${alignc} Cpu: ${cpu cpu0}% I Hd: ${fs_used_perc}% I Sys Temp: ${hwmon temp 1}°C
${font Roboto:pixelsize=13}${alignc} Wifi: ${wireless_link_qual wlp3s0}% I Battery: ${battery_percent BAT1}% I ${font Roboto:pixelsize=13}${alignc} Swap: $swap

${font Roboto:pixelsize=13}${alignc} ${execi 5000 whoami}, you can install ${execpi 12000 checkupdates | wc -l} update(s)
]]