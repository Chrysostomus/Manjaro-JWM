conky.config = {
	alignment = 'top_right',
	background = true,
	color2 = '333333',
	cpu_avg_samples = 2,
	default_color = '2938b9',
        draw_shades = false,
	double_buffer = true,
	font = 'Roboto:size=8',
	gap_x = 25,
	gap_y = 40,
	minimum_width = 200,
	no_buffers = true,
	own_window = true,
	own_window_type = 'override',
	own_window_transparent = true,
	update_interval = 1.0,
	use_xft = true,
}
conky.text = [[
${voffset 8}$color2${font Roboto:size=16}${time %A}$font${voffset -8}$alignr$color${font Roboto:size=38}${time %e}$font
$color${voffset -30}$color${font Roboto:size=18}${time %b}$font${voffset -3} $color${font Roboto:size=20}${time %Y}$font
#
${voffset 10}$alignr$color Vitória (ES) ${weather http://weather.noaa.gov/pub/data/observations/metar/stations/ SBVT temperature temperature 15}°C
#
${voffset 10}${goto 40}${color}CPU$alignr$cpu%
${voffset 5}${goto 40}$font$color2${top name 1}$alignr${color c0392b}${top cpu 1}%${color}
${goto 40}$color2${top name 2}$alignr${color c0392b}${top cpu 2}%${color}
${goto 40}$color2${top name 3}$alignr$color${top cpu 3}%
${goto 40}$color2${top name 4}$alignr$color${top cpu 4}%
${goto 40}$color2${top name 5}$alignr$color${top cpu 5}%
#
${voffset 10}${goto 40}${color}RAM$alignr$mem$font
${goto 40}${voffset 5}$color2${top_mem name 1}$alignr${color c0392b}${top_mem mem_res 1}${color}
${goto 40}$color2${top_mem name 2}$alignr${color c0392b}${top_mem mem_res 2}${color}
${goto 40}$color2${top_mem name 3}$alignr$color${top_mem mem_res 3}
${goto 40}$color2${top_mem name 4}$alignr$color${top_mem mem_res 4}
${goto 40}$color2${top_mem name 5}$alignr$color${top_mem mem_res 5}
#
${voffset 10}$alignr${execi 10000 awk -F'=' '/DESCRIPTION/ {print $2}' /etc/lsb-release |sed 's/"//g'} - ${execi 10000 awk -F'=' '/DISTRIB_RELEASE=/ {printf $2" "} /CODENAME/ {print $2}' /etc/lsb-release}
${voffset 10}$alignr${execi 1200 whoami}${color 333333} ${nodename}${color}
${alignr}${color2}${font Roboto:size=8}uptime ${color}${uptime_short}
${alignr}${color2}${font Roboto:size=8}${alignr}kernel ${color}${kernel}
${alignr}${color2}${font Roboto:size=8}${alignr}architecture ${color}${machine}
${alignr}${color2}${font Roboto:size=8}${alignr}update ${color}${execpi 12000 checkupdates | wc -l} package(s)
${voffset 20}$alignr${font Roboto:size=8}${alignr}enjoy the freedom...
]]